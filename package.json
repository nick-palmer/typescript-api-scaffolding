{
  "name": "ts-api-scaffolding",
  "version": "0.1.0",
  "private": true,
  "main": "src/app.ts",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./dist/app.js",
    "start:watch": "nodemon",
    "test": "mocha",
    "coverage": "nyc mocha",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "coveralls2": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "cookie-parser": "~1.4.7",
    "debug": "~2.6.9",
    "express": "~4.21.2",
    "fs-extra": "^7.0.1",
    "hbs": "^4.0.4",
    "http-errors": "~1.6.2",
    "moment": "^2.24.0",
    "morgan": "~1.9.0",
    "rotating-file-stream": "^1.4.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.7.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.0.5",
    "@types/http-errors": "^1.6.1",
    "@types/istanbul": "^0.4.30",
    "@types/mocha": "^5.2.7",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.9.5",
    "@types/passport": "^1.0.0",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.5",
    "mocha": "^6.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3333"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
